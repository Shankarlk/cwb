                    <button class="btn btn-sm btn-primary" title="Save the entered Information" data-plugin="tippy" data-tippy-placement="top" id="btnSaveBOM">Save</button>
                    -->
                    <!--<button type="button" class="btn btn-warning btn-sm"><i class="fas fa-arrow-right"></i></button>
                </div>-->
                <!-- ------end col ----- -->
            </div>
            <!-- end row -->
        </div>
    </div>
    <!-- ==================== -->
</form>