<div class="modal fade" id="StatusChangePopup" role="dialog" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content bxs-modal">
            <div class="modal-header">
                <h4 class="modal-title"> Change Status</h4>
                <button id="BtnStatusChangeClose" type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <label class="form-label col-md-6 mb-2">Current Routing Status </label>
                    <div class="col-md-6 mb-1">
                        <input class="form-control form-control-sm" id="SViewStatus" name="ViewStatus" type="text" title=""
                               data-plugin="tippy" data-tippy-placement="top" readonly>
                    </div>
                </div>
                <form method="post" id="FormStatusChange" onsubmit="return false;">
                    <div class="row">

                        <label class="form-label col-md-6 mb-2">New Routing Status  </label>
                        <div class="col-md-6 mb-1">
                            <select class="form-select form-select-sm" id="SStatus" name="Status">
                                <option value="Active" name="Status">Active</option>
                                <option value="InActive" name="Status">InActive</option>
                            </select>
                            <input id="SRoutingName" name="RoutingName" type="text" title="" data-plugin="tippy" data-tippy-placement="top" hidden>
                            <input type="text" hidden id="SManufacturedPartId" name="ManufacturedPartId" value="0" />
                            <input type="text" hidden id="SMKPartId" name="MKPartId" value="0" />
                            <input type="text" hidden id="SOrigRoutingId" name="OrigRoutingId" value="0" />
                            @*<input type="text" hidden id="CStatus" name="Status" value="Active" />*@
                            <input type="text" hidden id="SPreferredRouting" name="PreferredRouting" value="" />

                            <input type="text" hidden id="SRoutingId" name="RoutingId" value="0" />
                        </div>
                        <label class="form-label col-md-6 mb-2">Reason for Status Change </label>
                        <div class="col-md-6 mb-1">
                            <input class="form-control form-control-sm" id="SStatusChangeReason" name="StatusChangeReason" type="text" title=""
                                   data-plugin="tippy" data-tippy-placement="top">
                        </div>

                        <!-- =========  -->
                        <div class="col text-end mt-2">
                            <button id="BtnSRoutingSave" type="button" class="btn btn-sm btn-primary">Save</button>
                        </div>
                        <!-- =========  -->
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
