<div class="modal fade" id="routing-new" role="dialog" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bxs-modal">
            <div class="modal-header">
                <h4 class="modal-title" id="mySmallModalLabel">Create New Routing</h4>
                <button id="BtnNewRoutingClose" type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="FormNewRoutingName" onsubmit="return false;">
                    <div class="row">
                        <label class="form-label col-md-5 mb-2">Routing name <span class="text-danger">*</span></label>
                        <div class="col-md-7 mb-1">
                            <input class="form-control form-control-sm" id="RoutingName" name="RoutingName" type="text" title="Enter the Routing Name ... It has to be Unique" data-plugin="tippy" data-tippy-placement="top">
                            <input type="text" hidden id="ManufacturedPartId" name="ManufacturedPartId" value="0" />
                            <input type="text" hidden id="OrigRoutingId" name="OrigRoutingId" value="0" />
                            <input type="text" hidden id="RoutingId" name="RoutingId" value="0" />
                            <input type="text" hidden id="Status" name="Status" value="Active" />
                            <input type="text" hidden id="PreferredRouting" name="PreferredRouting" value="0" />
                        </div>
                        <div id="MakefromDiv" style="display: flex; align-items: center;">
                            <label class="form-label col-md-5 mb-2"> MakeFrom <span class="text-danger"> *</span> </label>
                            <div class="col-md-7 mb-1">
                                <select class="form-select form-select-sm" id="MKPartId" name="MKPartId">
                                </select>
                            </div>
                        </div>
                        <!-- =========  -->
                        <div class="col text-end mt-2">
                            <button id="BtnNewRouting" type="button" class="btn btn-sm btn-primary">Save</button>
                        </div>
                        <!-- =========  -->
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
