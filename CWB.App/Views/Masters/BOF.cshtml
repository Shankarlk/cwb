@{
ViewData["Title"] = "Item Master - BOF";
}
@model CWB.App.Models.ItemMaster.BoughtOutFinishDetailVM
<input value="M-IM" type="hidden" id="hdn-nav-menu" />
<div class="content">
    <div class="row">
        <!-- ====== Start col =========== -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <!-- ================ -->
                    <div class="row">
                        <div class="col-md-9">
                            <ul class="nav nav-tabs nav-pills navtab-bg">
                                <li class="nav-item" id="TabPartInfo">
                                    <a href="#tab-1" aria-expanded="false" class="nav-link active"> 
                                        <!--<span class="d-inline-block d-sm-none">Part Info</span> -->
                                        <span class="d-none d-sm-inline-block">Part Info</span>
                                    </a>
                                </li>
                                <li class="nav-item" id="TabPurchaseDetails">
                                    <a href="#tab-2" aria-expanded="true" class="nav-link "> 
                                        <!--<span class="d-inline-block d-sm-none">Purchase Details</span>--> 
                                        <span class="d-none d-sm-inline-block">Purchase Details</span> 
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-3 text-end">
                            <a asp-action="Index" asp-controller="Masters">
                                <input type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></input>
                            </a>

                        </div>
                    </div>
                    <!-- ===============================================================  -->
                    <!-- ===============================================================  -->
                    
                    <div class="tab-content">
                        <!-- ================ -->
                        <div class="tab-pane show active" id="tab-1">
                            <form method="post" id="BOFform" onsubmit="return false;">
                            <div class="row">
                                <h5 class="mb-3 mt-2"> Create New / Edit Bought Out Finish (BOF)</h5>
                                <div class="col-md-8">
                                    <div class="row">
                                        <div class="col-md-3 mt-1">
                                            <label class="form-label mb-1 font-13">Standard</label>
                                                <input class="form-check-input m-l-5" type="radio" id="RadioStandard" asp-for="BoughtOutFinishMadeType" value="1" title=" Standard BOF  Eg. M5 Screw, 1" Nail ..." data-plugin="tippy" data-tippy-placement="top" checked>
                                        </div>
                                        <!-- ---------------  -->
                                        <div class="col-md-3 mt-1">
                                            <label class="form-label mb-1 font-13">Catalog</label>
                                                <input class="form-check-input m-l-5" type="radio" id="RadioCatalog" asp-for="BoughtOutFinishMadeType" value="2" title="Catalog BOF .. Ready to use Parts identified typically by Supplier's Part No" data-plugin="tippy" data-tippy-placement="top">
                                        </div>
                                        <!-- ---------------  -->
                                        <div class="col-md-3 mt-1 text-center">
                                            <label class="form-label mb-1 font-13">Made to Print</label>
                                                <input class="form-check-input m-l-5" type="radio" id="RadioMadetoPrint" asp-for="BoughtOutFinishMadeType" value="3" title="- Made to Print .. Ready to use Part made to the Company's Drg" data-plugin="tippy" data-tippy-placement="top">
                                        </div>
                                    </div>
                                    <!--
                                    <input type="text" hidden id="BoughtOutFinishMadeType" asp-for="BoughtOutFinishMadeType" value="1"/>
                                    -->
                                </div>
                                <!-- ============= -->
                                <label class="form-label col-md-1 mb-2 text-end">Status</label>
                                <div class="col-md-3 mb-2">
                                    <div class="input-group">
                                            <select class="form-select form-select-sm" asp-for="Status" asp-items="ViewBag.Statuses" required>
                                            </select>
                                        <button type="button" id="#" class="btn btn-sm waves-effect waves-light" title="Click to see the Status change details" data-plugin="tippy" data-tippy-placement="top" data-bs-toggle="modal" data-bs-target="#status-info">
                                            <i class="fe-info color-green add-cust-btn"></i>
                                        </button>
                                        <!--
                                        <input type="text" hidden asp-for="Status" id="Status" value="1" />
                                            -->
                                    </div>
                                </div>
                                <!-- ========================= -->
                                <!-- ========================= -->
                                <div class="col-md-7"></div>
                                <!-- ========================= -->
                                <label class="form-label col-md-2 mb-2 text-end">Status Change Reason</label>
                                <div class="col-md-3 mb-2" title="Enter Status Change Reason" data-plugin="tippy" data-tippy-placement="top">
                                    <input asp-for="StatusChangeReason" name="StatusChangeReason" id="StatusChangeReason" class="form-control form-control-sm" type="text" placeholder="enter here">
                                    <span asp-validation-for="StatusChangeReason"></span>
                                </div>
                                <!-- ========================= -->
                                <!-- ========================= -->
                            </div>
                            <hr>
                            <!-- ------------ -->
                            <!-- ============================== -->
                                <div class="row">
                                    <!-- ========================= -->
                                    <label class="form-label col-md-2 mb-2">Part No </label>
                                    <div class="col-md-4 mb-2">
                                        <input class="form-control form-control-sm" type="text" placeholder="enter here" title="Enter the Part Number (No.) - Please note that the Part No. is to be unique " data-plugin="tippy" data-tippy-placement="top" asp-for="PartNo" required>
                                        <span asp-validation-for="PartNo"></span>
                                    </div>
                                    <!-- ========================= -->
                                    <label class="form-label col-md-1 mb-2 text-end">Rev No</label>
                                    <div class="col-md-2 mb-2">
                                        <input class="form-control form-control-sm" type="text" placeholder="enter here" title="Enter the Revision Number (Rev No) for the Part No. If not entered, default of '0' is entered" data-plugin="tippy" data-tippy-placement="top" asp-for="RevNo" value="0" required>
                                    </div>
                                    <!-- ========================= -->
                                    <label class="form-label col-md-1 mb-2 text-end">Rev Date</label>
                                    <div class="col-md-2 mb-2">
                                        <input class="form-control form-control-sm" type="date" id="RevDate" title="Enter the Rev No Date if available" data-plugin="tippy" data-tippy-placement="top" asp-for="RevDate">
                                    </div>
                                    <!-- ========================= -->
                                </div>
                                <!-- ========================= -->
                                <div class="row" hidden>
                                    <label class="form-label col-md-2 mb-2">Supplier Part No </label>
                                    <div class="col-md-4 mb-2">
                                        <input class="form-control form-control-sm" type="text" placeholder="enter here" title="Enter the Supplier Part No" data-plugin="tippy" data-tippy-placement="top" asp-for="SupplierPartNo" value="-" required>
                                    </div>
                                </div>
                                <!-- ========================= -->
                                <!--<div class="row">
                                    <label class="form-label col-md-2 mb-2">Part Description <span class="text-danger"> * </span></label>
                                    <div class="col-md-4 mb-2">
                                        <textarea class="form-control form-control-sm" title="Enter the Part Description" data-plugin="tippy" data-tippy-placement="top" required asp-for="PartDescription"></textarea>
                                    </div>
                                </div>
                                -->
                                <div class="row">
                                    <!-- ========================= -->
                                    <label class="form-label col-md-2 mb-2">Part Desc <span class="text-danger"> * </span></label>
                                    <div class="col-md-4 mb-2" title="Enter the Part Description (fully or Partially) to shortlist the Part Nos" data-plugin="tippy" data-tippy-placement="top">
                                        <textarea id="PartDescription" asp-for="PartDescription" class="form-control form-control-sm"></textarea>
                                    </div>
                                    <!-- ========================= -->
                                    <label class="form-label col-md-1 mb-2 text-end"> UOM</label>
                                    <div class="col-md-2 mb-2">
                                        <div class="input-group" title="Select the Unit of Measurement (UoM). Default is Numbers (Nos)" data-plugin="tippy" data-tippy-placement="top">
                                            <select class="form-select form-select-sm" id="UOMId" asp-for="UOMId" asp-items="@ViewBag.UOMs"></select>
                                            <button type="button" id="#" class="btn btn-sm waves-effect waves-light" title="Add UOM" data-plugin="tippy" data-tippy-placement="top" data-bs-toggle="modal" data-bs-target="#dialog-AddUOM">
                                                <i class="fe-plus-square add-cust-btn"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <!-- -------------------------------------  -->
                                </div>
                                
                                <div class="row">
                                    <label class="form-label col-md-2 mb-2">Additional Information</label>
                                    <div class="col-md-4 mb-2">
                                        <textarea class="form-control form-control-sm" title="" data-plugin="tippy" data-tippy-placement="top" asp-for="AdditionalInfo"></textarea>
                                        <input type="text" hidden id="PartId" asp-for="PartId" />
                                        <input type="text" hidden id="MasterPartType" asp-for="MasterPartType" value="2" />
                                        <input type="text" hidden id="BoughtOutFinishDetailId" asp-for="BoughtOutFinishDetailId"/>
                                    </div>
                                 </div>
                                <!-- ========================= -->
                                
                                <div class="row">
                                    <label class="form-label col-md-2 mb-2">Reorder Level </label>
                                    <div class="col-md-4 mb-2" title="Enter the Reorder Level" data-plugin="tippy" data-tippy-placement="top">
                                        <input class="form-control form-control-sm" type="text" id="ReorderLevel" asp-for="ReorderLevel" placeholder="enter here">
                                    </div>

                                    <label class="form-label col-md-1 mb-2 text-end">Reorder Qnty </label>
                                    <div class="col-md-2 mb-2" title="Enter the Reorder Qnty" data-plugin="tippy" data-tippy-placement="top">
                                        <input class="form-control form-control-sm" type="text" id="ReorderQnty" asp-for="ReorderQnty" placeholder="enter here">
                                    </div>
                                    <div class="col-md-3 mt-3 text-end">
                                        <a asp-action="Index" asp-controller="Masters">
                                            <button type="button" class="btn btn-sm btn-dark" data-bs-toggle="modal">Exit</button>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-primary" title="Use to Save the entered data" id="btnBOFDetailSubmit" value="Save">Save</button>
                                        <!--
        <button type="button" class="btn btn-sm btn-warning"> <i class=" fas fa-arrow-right"></i> </button>
        -->
                                    </div>
                                </div>
                            </form>
                            <div class="row mt-2">
                                <!-- ========================= -->
                                <partial name="_ReferenceDocuments" />
                            </div>
                            <!-- end row -->
                            <!-- end row -->
                        </div><!--End Tab1-->
                        <!-- ================ -->
                        <!--Add Tab 2 here... PartPurchase-->
                        <partial name="../Shared/_PurchaseDetails.cshtml" />
                        <!-- ==================================== -->
                        <!-- ========================== -->
                        <div class="tab-pane" id="tab-3"></div>
                        <!-- ======================= -->
                    </div>
                    <!-- ====== end tab content  ========== -->
                </div>
            </div>
        </div>
        <!-- ====== end col =========== -->
    </div>
    <!-- end row -->
</div>
<partial name="../Shared/_DeletePurchaseDetails" model='new CWB.App.Models.ItemMaster.PartPurchaseDetailsVM{PartPurchaseId=0}' />
<partial name="../Shared/_EditPurchaseDetails" model='new CWB.App.Models.ItemMaster.PartPurchaseDetailsVM{PartPurchaseId=0}' />
<partial name="../Shared/_ContactsDialog" model='new CWB.App.Models.Contacts.CompanyVM{CompanyId=0,DivisionId=0,Location=""}' />
<!----wrapper ends----->
<!-- END wrapper -->
