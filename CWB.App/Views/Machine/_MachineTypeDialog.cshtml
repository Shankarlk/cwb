@model CWB.App.Models.Machine.MachineTypeVM
<div class="modal fade" id="machine-type-dialog" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bxs-modal">
            <div class="modal-header">
                <h4 class="modal-title" id="mySmallModalLabel">Machine Type</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmMachineType" method="post">
                    <div class="row">
                        <label class="form-label col-md-3 mb-2 text-end">Machine Type Description</label>
                        <div class="col-md-7 mb-2">
                            <input type="text" class="form-control form-control-sm" asp-for="MachineTypeName" placeholder="Enter here" />
                            <span asp-validation-for="MachineTypeName"></span>
                        </div>
                        <!-- ========================= -->
                        <div class="col">
                            <input type="button" class="btn btn-sm btn-primary" id="btnMachineTypeSubmit" value="Save" />
                        </div>
                        <!-- ========================= -->
                    </div>
                    <input type="hidden" asp-for="MachineTypeTypeId" />
                </form>
                <hr>
                <div class="row mb-3">
                    <h6>Documents Types to be uploaded for this M/c Type</h6>
                    <div class="col-md-6 dott-bord-r mt-3">
                        @*<form id="McTypeDocForm" method="post">*@
                            <div class="row">
                                <label class="form-label col-md-5 mb-2">Document Type Name</label>
                                <div class="col-md-7 mb-2">
                                    <select class="form-select form-select-sm" id="McTypeDocumentTypeId">
                                    </select>
                                </div>
                                <!-- -------------  -->
                                <div class="col-md-12 mb-2">
                                    <label class="form-check-label" for="gp-12a">Document Upload Mandatory </label>
                                    <input class="form-check-input mt-1 m-l-10" type="checkbox" id="McTypeMandatory" data-plugin="tippy" data-tippy-placement="top" data-tippy="" data-original-title="Select if the Document is mandatory .... ie without which the machine cannot be set or operated">
                                </div>
                                <!-- ================ -->
                                <div class="col-md-12 text-end">
                                    <button class="btn btn-sm btn-primary" data-plugin="tippy" 
                                            data-tippy-placement="top" data-tippy="" data-original-title="Select to Add the Document Type to the List of Documents"
                                           id="btnMcTypeDocSave" >Save</button>
                                </div>
                                <input type="text" hidden id="McTMcTypeId" />
                                <input type="text" hidden id="McTMandatory" />
                                <input type="text" hidden id="McTMcTypeDocListId" />
                                <!-- ================ -->
                                <div class="col-md-12 mt-2">
                                    <span id="Text-Error"></span>
                                </div>
                            </div>
                        @*</form>*@
                    </div>
                    <!-- -------------------  -->
                    <div class="col-md-6">
                        <div class="table-responsive table-he-150 mt-3">
                            <table class="table table-sm table-bordered text-center tableFixHead w-100" id="McTypeAssocDocGrid">
                                <thead class="  table-info th-sti">
                                    <tr class="table-border-bottom">
                                        <th>Document Type</th>
                                        <th>Mandatory</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<template id="McTypeAssocRow">
    <tr>
        <td>{documentTypeName}</td>
        <td>{mandatory}</td>
        <td>
            <div class="dropdown float-center">
                <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-vertical"></i></a>
                <div class="dropdown-menu dropdown-menu-end">
                    <!-- item-->
                    <button data-id="{mcTypeDocListId}" data-mandatory="{mandatory}" data-doctype="{documentTypeName}" data-doctypeid="{documentTypeId}" 
                            class="dropdown-item edit">
                        Edit
                    </button>
                    <!-- item-->
                    <button data-id="{mcTypeDocListId}" data-doctypeid="{documentTypeId}" onclick="DeleteMcTypeDoc(this)" class="dropdown-item delete">Delete</button>
                </div>
            </div>
        </td>
    </tr>
</template>